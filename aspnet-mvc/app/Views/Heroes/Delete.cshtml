@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model AspNetMvcDemo.Models.Hero

@{
    Layout = "_Layout";
    ViewBag.Title = "Delete Hero";
}
<div>
    <h4>Delete Hero</h4>
    <hr />
    <p class="alert alert-danger">
        Are you sure you want to delete <strong>@Html.DisplayFor(model => model.Name)</strong>?
    </p>
    @Html.ActionLink("Yes, delete the record", "DeleteConfirmed", new { id = Model.ID }, new { @class = "btn btn-secondary", role = "button" })
    <a class="btn btn-primary" role="button" asp-action="Index">No, don't delete, back to List</a>
</div>
